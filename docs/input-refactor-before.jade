search-select(
  error-message=translate('planning.create_diag.basic.client.error.message')
  model='campaign.client'
  ng-required='true'
  option-key='name'
  options="clients | orderBy:'name'")

// ### <rfp-details>

search-select(
  error-message="{{'planning.create_diag.basic.client.error.message'|translate}}"
  model='rfp.campaignDetails.buyerAccount'
  option-key='name'
  options="clients | orderBy:'name'")
